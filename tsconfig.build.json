{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "rootDir": "components",
        "skipLibCheck": true,
        "strict": true,
        "types": ["vitest/importMeta"]
    },
    "include": ["components/index.ts"],
    "exclude": [
        "components/**/*mock.*",
        "components/**/spec.*",
        "components/**/stories.*",
        "components/**/styles.css.ts",
        "components/**/test.*"
    ]
}
