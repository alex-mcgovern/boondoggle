{
	"author": "Alex McGovern",
	"name": "boondoggle",
	"description": "Boondoggle component library",
	"version": "0.20.11-30",
	"license": "MIT",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-mcgovern/boondoggle.design.git"
	},
	"type": "module",
	"exports": {
		"./css": {
			"import": "./dist/index.css.js",
			"require": "./dist/index.css.js",
			"types": "./dist/index.css.d.ts"
		},
		"./sprinkles": {
			"import": "./dist/sprinkles/index.css.js",
			"require": "./dist/sprinkles/index.css.js",
			"types": "./dist/sprinkles/index.css.d.ts"
		},
		"./v2-icon-flag/*": {
			"import": "./dist/v2-icon-flag/*.js",
			"require": "./dist/v2-icon-flag/*.js",
			"types": "./dist/v2-icon-flag/*.d.ts"
		},
		"./*": {
			"import": "./dist/*/index.js",
			"require": "./dist/*/index.js",
			"types": "./dist/*/index.d.ts"
		}
	},
	"scripts": {
		"=== BUILD ===": "",
		"build": "concurrently -n JS,DTS -c \"bgGreen.bold,bgBlue.bold\" \"npm:build-js\" \"npm:build-types\"",
		"build-js": "NODE_OPTIONS=\"--max-old-space-size=16384\" tsup",
		"build-types": "tsc --project tsconfig.build.json  --declaration --emitDeclarationOnly --outDir \"./dist\"",
		"prebuild": "npm run check",
		"=== BUILD (OLD) ===": "",
		"build:dev": "rm -rf lib && tsup --watch",
		"build:docs": "storybook build -o build",
		"build:prod": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=16384' tsup",
		"build:watch": "tsup --watch",
		"ci-build-prerelease": "npm run build:prod && npm version prerelease && npm publish --access public",
		"=== VERSIONING ===": "",
		"patch": "npm version patch",
		"preversion": "npm run build",
		"prerelease": "npm version prerelease",
		"postversion": "npm publish --access public && git push --no-verify",
		"=== STORYBOOK ===": "",
		"build-storybook": "storybook build",
		"storybook": "storybook dev -p 6006",
		"=== CHECKS ===": "",
		"check": "concurrently -n BIOME,TSC,JEST -c \"bgYellow.bold,bgBlue.bold,bgGreen.bold\" \"npm:check-biome\" \"npm:check-tsc\" \"npm:check-jest\"",
		"check-biome": "biome check --apply-unsafe .",
		"check-tsc": "tsc",
		"check-jest": "jest",
		"=== TESTING ===": "",
		"cy:open": "cypress open",
		"cy:run": "cypress run --component",
		"test:watch": "jest --watch"
	},
