{
	"author": "Alex McGovern",
	"name": "boondoggle",
	"description": "Boondoggle component library",
	"version": "0.15",
	"license": "MIT",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-mcgovern/boondoggle.design.git"
	},
	"type": "module",
	"types": "dist/index.d.ts",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./components/*": {
			"import": "./dist/components*",
			"require": "./dist/components/*",
			"types": "./dist/index.d.ts"
		},
	},
	"scripts": {
		"=== BUILD ===": "",
		"build": "tsup",
		"prebuild": "rm -rf dist/*",
		"=== BUILD (OLD) ===": "",
		"build:dev": "rm -rf lib && tsup --watch",
		"build:docs": "storybook build -o build",
		"build:prod": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=16384' tsup",
		"build:watch": "tsup --watch",
		"ci-build-prerelease": "npm run build:prod && npm version prerelease && npm publish --access public",
		"=== VERSIONING ===": "",
		"patch": "npm run check && npm run build && npm version patch && npm publish --access public && git push --no-verify",
		"=== STORYBOOK ===": "",
		"build-storybook": "storybook build",
		"storybook": "storybook dev -p 6006",
		"=== LINTING ===": "",
		"check": "npm run tsc && npm run ci-lint && npm run test",
		"ci-lint": "biome ci .",
		"fix": "biome check --apply-unsafe .",
		"format": "prettier    --loglevel warn --write \"./**/*.{ts,tsx,css,md,json}\" ",
		"lint:fix": "biome check --apply .",
		"prune": "ts-prune --error --ignore 'src/index.ts|docs|build|(.*).stories.tsx|tsup.config.ts|documentation|get_sprinkles.css.ts|src/components/icon_flag/flags/(.*).tsx'",
		"tsc": "tsc",
		"=== TESTING ===": "",
		"cy:open": "cypress open",
		"cy:run": "cypress run --component",
		"test:watch": "jest --watch",
		"test": "jest"
	},
	"dependencies": {
		"@dessert-box/core": "0.2.0",
		"@dessert-box/react": "0.7.5",
		"@floating-ui/react": "0.25.1",
		"@fortawesome/fontawesome-svg-core": "6.4.0",
		"@fortawesome/pro-solid-svg-icons": "6.4.0",
		"@fortawesome/pro-duotone-svg-icons": "6.4.0",
		"@fortawesome/react-fontawesome": "0.2.0",
		"@hookform/resolvers": "3.3.2",
		"@radix-ui/react-collapsible": "1.0.3",
		"@radix-ui/react-slider": "1.1.2",
		"@radix-ui/react-slot": "1.0.2",
		"@rehookify/datepicker": "5.0.0",
		"@tanstack/match-sorter-utils": "8.8.4",
		"@tanstack/react-table": "8.9.3",
		"@testing-library/react": "14.0.0",
		"@testing-library/user-event": "14.4.3",
		"clsx": "1.2.1",
		"downshift": "8.1.0",
		"intl-number-parser": "1.0.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "7.47.0",
		"@vanilla-extract/recipes": "0.4.0",
		"@vanilla-extract/sprinkles": "1.6.0",
		"@vanilla-extract/css": "1.11.0",
		"@vanilla-extract/css-utils": "0.1.3",
		"@radix-ui/colors": "0.1.8",
		"zod": "3.21.4"
	},
	"devDependencies": {
		"@babel/core": "7.21.8",
		"@babel/preset-env": "7.21.5",
		"@babel/preset-react": "7.18.6",
		"@babel/preset-typescript": "7.21.5",
		"@biomejs/biome": "1.3.3",
		"@faker-js/faker": "8.0.2",
		"@storybook/addon-essentials": "7.0.12",
		"@storybook/addon-interactions": "7.0.12",
		"@storybook/addon-mdx-gfm": "7.0.12",
		"@storybook/blocks": "7.0.12",
		"@storybook/jest": "0.1.0",
		"@storybook/react": "7.0.12",
		"@storybook/react-webpack5": "7.0.12",
